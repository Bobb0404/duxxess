};

function loadPuzzle() {
  const id = document.getElementById("puzzle-id").value.trim().toUpperCase();
  const puzzle = puzzles[id];
  if (puzzle) {
    renderGrid(puzzle.size, puzzle.clues);
  } else {
    alert("Puzzle ID not found!");
  }
}
